/* components/blogcard/index.wxss */
@import '../../style/iconfont.wxss';

.container {
  background-color: #192031;
  color: #f0f0f0;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #ffc107;
}

.pubInfo {
  padding-left: 20rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.pubInfo .userName {
  font-size: 40rpx;
}

.pubInfo .pubTime {
  color: rgba(255, 255, 255, 0.4);
}

.content {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content .text {
  width: 100%;
  padding: 20rpx 0;
}

.content .img {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.content image {
  border-radius: 6rpx;
  /* overflow: hidden; */
  width: 220rpx;
  height: 220rpx;
  margin: 8rpx;
}

.comment {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.comment view {
  width: 50%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.comment view:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.comment span {
  font-size: 40rpx;
  color: #ffc107;
}

.bar {
  margin: 20rpx 0;
  width: 300rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background-color: #1f2734;
}
