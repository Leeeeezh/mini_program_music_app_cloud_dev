/* components/blogsearch/index.wxss */
@import '../../style/iconfont.wxss';

.search {
  width: 100%;
  height: 100rpx;
  z-index: 100;
  padding: 0 10rpx;
  /* position: fixed;
  top:0;
  left: 0; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #1f2734;
  box-sizing: border-box;
}

.search .icon {
  color: #ffc107;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.iconfont {
  font-size: 50rpx;
}

.search .wrap {
  padding: 0 30rpx;
  box-sizing: border-box;
  flex: 1;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #f0f0f0;
}

.wrap input {
  flex: 1;
}

.search .btn {
  color: #121826;
  background-color: #ffc107;
  margin-left: 20rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
