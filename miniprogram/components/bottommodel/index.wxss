/* components/bottommodel/index.wxss */
.container {
  position:fixed;
  z-index: 1000;
  bottom: 0;
  left: 0;
  width:100%;
  height:400rpx;
  background-color: #1f2734;

  transition: all .3s ease-in-out;
}

.close {
  color: #ffc107;
  position: absolute;
  padding:20rpx;
  font-size: 50rpx;
  top: 0;
  right:0;
}