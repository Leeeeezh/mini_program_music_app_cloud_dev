/* components/listitem/index.wxss */

.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 20rpx 0;
  /* border-bottom: 1rpx solid #f0f0f0; */
}

.container:active {
  background-color: rgba(99, 236, 172, 0.1);
}

.index {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.index text {
  padding-right: 6rpx;
  border-right: 6rpx solid #64edac;
}

.info {
  width: 650rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.info text {
  display: inline-block;
  width: 650rpx;
  /* height: 60rpx; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.name {
  color: #333;
}

.name text {
  font-size: 36rpx;
  height: 60rpx;
}

.active {
  background-color: rgba(100, 237, 172, 0.1);
}

.active .name {
  color: #64edac;
}

.author {
  color: #999;
  font-size: 26rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.author text {
  margin-right: 40rpx;
}
