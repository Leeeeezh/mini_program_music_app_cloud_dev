/* components/listitem/index.wxss */

.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  /* height: 100rpx; */
  padding: 20rpx 0 30rpx;
  background-color: #121826;
  /* border-bottom: 1rpx solid #f0f0f0; */
}

.container:active {
  background-color: #121826;
}

.index {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #95b7c9;
}

.index text {
  padding-right: 20rpx;
  border-right: 6rpx solid #95b7c9;
  line-height: 100rpx;
}

.info {
  width: 650rpx;
  /* height: 100rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.info text {
  display: inline-block;
  /* width: 650rpx; *//* height: 60rpx; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mainName {
  font-size: 36rpx;
  max-width: 650rpx;
}

.name {
  color: #95b7c9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.name text {
  /* font-size: 36rpx; */
  height: 60rpx;
}

.active {
  background-color: rgba(18, 24, 38, 0.9);
}

.active .name {
  color: rgba(255, 193, 7, 1);
}

.active .index text {
  border-right: 6rpx solid rgba(255, 193, 7, 1);
  color: rgba(255, 193, 7, 1);
}

.author {
  color: #999;
  font-size: 26rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.author text {
  margin-right: 40rpx;
}

.alia {
  max-width: 650rpx;
  /* line-height: 30rpx; */
  font-size: 30rpx !important;
  color: #999;
  /* padding: 0 40rpx; */
}
