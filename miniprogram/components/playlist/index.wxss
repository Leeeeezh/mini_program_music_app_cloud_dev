/* components/playlist/index.wxss */

.container {
  width: 300rpx;
  position: relative;
  margin-bottom: 30rpx;
  /* background-color: #251f34; */
  color: rgba(255, 255, 255, 0.7);
  /* box-shadow: 0 0 14rpx #bbb014; */
  border-radius: 14rpx;
  overflow: hidden;
}

.img {
  width: 300rpx;
  height: 300rpx;
  filter: brightness(0.9);
  border-radius: 14rpx;
  /* box-shadow: 40rpx 0 0 -20rpx rgba(100, 237, 172, .7); */
}

.playCount {
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx 10rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  color: rgba(255, 255, 255, 1);
  width: 100%;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.3);
}

.icon {
  width: 26rpx;
  height: 26rpx;
  opacity: 0.8;
}

.name {
  /* border-top: 6rpx solid #64edac; *//* padding: 0 10rpx; */
  color: #555;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  font-size: 26rpx;
  text-align: center;
}

.name text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  color: rgba(255, 255, 255, 0.7);
}
