/* pages/blog/blog.wxss */

.container {
  position: relative;
  z-index: 100;
  width: 100%;
  min-height: 100vh;
  background-color: #1f2734;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: black;
  backdrop-filter: blur(2rpx);
  opacity: 0.6;
}

.loginBtn {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginBtn button {
  width: 90vw;
  height: 90rpx;
  background-color: #ffc107;
  border-radius: 45rpx;
}

.loginBtn button:active {
  background-color: #b38706;
}
