/* pages/musiclist/musiclist.wxss */

.container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  background-color: #121826;
}

.head {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}

.headBg {
  /* overflow: hidden; */
  width: 800rpx;
  height: 800rpx;
  position: relative;
  top: -25rpx;
  left: -25rpx;
  background-size: 100%;
  background-position: 0 0;
  filter: blur(2px) brightness(0.5);
}

.headContent {
  box-sizing: border-box;
  width: 750rpx;
  height: 750rpx;
  /* padding: 30rpx 20rpx 0; */
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.cover {
  width: 400rpx;
  height: 400rpx;
  border-radius: 10rpx;
  box-shadow: 20rpx 0rpx 0 -6rpx rgba(255, 193, 7, 0.6);
}

.name {
  padding: 20rpx;
  /* font-weight: bold; */
}

.tags .value {
  margin: 10rpx;
  padding: 6rpx 14rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 24rpx;
}

.description {
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 20rpx 20rpx 0;
  color: rgba(255, 255, 255, 0.6);
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.options {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #121826;
  width: 100%;
  height: 100rpx;
}

.options > view {
  width: 50%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.options > view:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.options text, .options span {
  color: #89b0c7;
}

.options span {
  font-size: 40rpx;
  padding: 10rpx;
}
