/* pages/musiclist/musiclist.wxss */
.container {
  width: 100%;
  position: relative;
}

.head {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}

.headBg {
  /* overflow: hidden; */
  width: 800rpx;
  height: 800rpx;
  position: relative;
  top: -25rpx;
  left: -25rpx;
  background-size: 100%;
  background-position: 0 0;
  filter: blur(2px) brightness(0.5);
}

.headContent {
  box-sizing: border-box;
  width: 750rpx;
  height: 750rpx;
  /* padding: 30rpx 20rpx 0; */
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
}

.cover {
  width: 400rpx;
  height: 400rpx;
  border-radius: 10rpx;
}

.name {
  padding: 20rpx;
  /* font-weight: bold; */
}

.tags .value {
  margin: 10rpx;
  padding: 6rpx 14rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 24rpx;
}

.description {
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 20rpx 20rpx 0;
  color: rgba(255, 255, 255, 0.6);
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
}
