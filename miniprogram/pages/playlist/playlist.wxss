/* pages/playlist/playlist.wxss */

.container {
  background-color: #1f2734;
  min-height: 100vh;
  position: relative;
}

.text {
  color: rgb(99, 236, 172);
}

.toTop {
  background-color: #1f2734;
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  border-radius: 50%;
  position: fixed;
  bottom: 160rpx;
  right: 60rpx;
  z-index: 200;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10rpx #1f2734;
  transition: all 0.3s ease-in-out;
}

.icon-huidaodingbu {
  font-size: 180rpx;
  color: #ffc107;
}

.toTopHide {
  transform: translateX(250rpx);
}

.search {
  width: 100%;
  height: 100rpx;
  z-index: 100;
  padding: 0 20rpx;
  /* position: fixed;
  top:0;
  left: 0; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #1f2734;
  box-sizing: border-box;
}

.search .wrap {
  box-sizing: border-box;
  flex: 1;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #555;
}

.wrap text {
  color: #f0f0f0;
}

.swiper {
  /* box-shadow: 0 0 20rpx #aaa; */
}

image {
  width: 100%;
}

.playlists {
  padding: 20rpx 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.toPlayer {
  position: fixed;
  right: 0;
  bottom: 20rpx;
  z-index: 300;
  border-radius: 40rpx;
  border: 10rpx solid rgb(31, 39, 52);
}

.login {
  width: 90%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #ffc107;
}
